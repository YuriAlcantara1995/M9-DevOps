pipeline {
    agent {
    	label 'target'
    }
    
    tools {
    	go '1.16.13'
    }

    stages {
        stage('Test host') {
            steps {
                sh 'go test'
            }
        }
        stage('Build') {
            steps {
                sh 'go build -o sample main.go'
            }
        }
        stage('Save Artifact') {
            steps {
                archiveArtifacts artifacts: 'sample', followSymlinks: false
            }
        }
    }
}
