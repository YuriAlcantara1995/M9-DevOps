pipeline {
    agent {
    	docker { 
    		image 'golang' 
    	}
    }
    
    environment {
    	XDG_CACHE_HOME = '/tmp/.cache'
    }
    
    stages {
        stage('Test host') {
            steps {
                sh 'go test'
            }
        }
        stage('Build') {
            steps {
                sh 'go build -o sample main.go'
            }
        }
        stage('Save Artifact') {
            steps {
                archiveArtifacts artifacts: 'sample', followSymlinks: false
            }
        }
    }
}
